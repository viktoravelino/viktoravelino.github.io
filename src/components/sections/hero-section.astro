---
import { Button } from "@/components/ui/button";
import { SocialLinks } from "@/components/social-links";
import { heroData } from "@/data/hero";
---

<section id="hero" class="hero-grain relative min-h-screen flex items-center overflow-hidden">
  <!-- Ambient glow — offset to the right to create asymmetric depth -->
  <div
    class="absolute top-1/3 right-[10%] w-[500px] h-[500px] rounded-full bg-[radial-gradient(circle,_oklch(0.45_0.08_250_/_12%)_0%,_transparent_70%)] blur-3xl pointer-events-none"
    style="animation: hero-glow-pulse 6s ease-in-out infinite;"
  ></div>

  <div class="relative z-10 w-full max-w-5xl mx-auto px-6 sm:px-10 lg:px-16 py-20">
    <div class="flex flex-col gap-8 max-w-2xl">
      <!-- Greeting — small caps, tracked out -->
      <p class="text-muted-foreground text-sm tracking-[0.2em] uppercase font-light hero-fade-in [--delay:0]" style="font-family: 'Geist', sans-serif;">
        {heroData.greeting}
      </p>

      <!-- Name — large serif, the anchor of the section -->
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-normal tracking-tight leading-[0.95] hero-fade-in [--delay:1]" style="font-family: 'Instrument Serif', serif;">
        {heroData.name}
      </h1>

      <!-- Decorative line — grows in from the left -->
      <div class="hero-line h-px w-24 bg-gradient-to-r from-foreground/60 to-transparent"></div>

      <!-- Role — serif italic for contrast -->
      <p class="text-lg sm:text-xl text-foreground/70 hero-fade-in [--delay:3]" style="font-family: 'Instrument Serif', serif; font-style: italic;">
        {heroData.role}
      </p>

      <!-- Description -->
      <p class="text-muted-foreground max-w-lg text-[15px] sm:text-base leading-relaxed font-light hero-fade-in [--delay:4]" style="font-family: 'Geist', sans-serif;">
        {heroData.description}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 pt-2 hero-fade-in [--delay:5]">
        {heroData.cta.map((item) => (
          <Button variant={item.variant} size="lg" asChild>
            <a href={item.href} class="tracking-wide text-sm">{item.label}</a>
          </Button>
        ))}
      </div>

      <!-- Social Links -->
      <div class="hero-fade-in [--delay:6]">
        <SocialLinks client:load />
      </div>
    </div>
  </div>
</section>
