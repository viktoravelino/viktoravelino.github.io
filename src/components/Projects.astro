---
import { getCollection } from "astro:content";

const projects = (await getCollection("projects")).sort((a, b) => {
  // date can be undefined, so we need to handle that case
  const dateA = a.data.date ? new Date(a.data.date) : new Date(0);
  const dateB = b.data.date ? new Date(b.data.date) : new Date(0);
  return dateB.getTime() - dateA.getTime();
});
---

<section id="projects" class="py-24">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-4">Projects</h2>
    <p class="text-muted-foreground text-center mb-16 max-w-xl mx-auto">
      Notable projects I've contributed to throughout my career.
    </p>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        projects.map((project) => (
          <div class="rounded-xl border border-border bg-card p-6 flex flex-col hover:border-primary/30 transition-colors">
            <h3 class="font-semibold text-lg mb-2">{project.data.title}</h3>
            <p class="text-sm text-muted-foreground mb-4 flex-1">
              {project.data.description}
            </p>
            <div class="flex items-center justify-between">
              <div class="flex flex-wrap gap-2">
                {project.data.tags.map((tag) => (
                  <span class="text-xs px-2.5 py-1 rounded-full bg-secondary text-secondary-foreground">
                    {tag}
                  </span>
                ))}
              </div>
              {(project.data.github || project.data.live) && (
                <div class="flex items-center gap-1 ml-2 shrink-0">
                  {project.data.github && (
                    <a
                      href={project.data.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      aria-label={`${project.data.title} GitHub repository`}
                      class="p-1.5 text-muted-foreground hover:text-foreground transition-colors"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                        <path d="M9 18c-4.51 2-5-2-7-2" />
                      </svg>
                    </a>
                  )}
                  {project.data.live && (
                    <a
                      href={project.data.live}
                      target="_blank"
                      rel="noopener noreferrer"
                      aria-label={`${project.data.title} live site`}
                      class="p-1.5 text-muted-foreground hover:text-foreground transition-colors"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M15 3h6v6" />
                        <path d="M10 14 21 3" />
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                      </svg>
                    </a>
                  )}
                </div>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
