---
import { getCollection } from "astro:content";
import { formatDate } from "../lib/utils";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<section class="py-24 bg-secondary/30">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-4">Blog</h2>
    <p class="text-muted-foreground text-center mb-16 max-w-xl mx-auto">
      Thoughts on software development, technology, and more.
    </p>

    {
      posts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
          {posts.map((post) => {
            const formattedDate = formatDate(post.data.date, "short");

            return (
              <a
                href={`/blog/${post.id}`}
                class="group rounded-xl border border-border bg-card overflow-hidden hover:border-primary/30 transition-colors"
              >
                {post.data.coverImage && (
                  <img
                    src={post.data.coverImage}
                    alt={post.data.title}
                    class="w-full h-40 object-cover"
                  />
                )}
                <div class="p-6">
                  <time class="text-xs text-muted-foreground">{formattedDate}</time>
                  <h3 class="font-semibold text-lg mt-2 mb-2 group-hover:text-primary/80 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-sm text-muted-foreground line-clamp-2">
                    {post.data.description}
                  </p>
                </div>
              </a>
            );
          })}
        </div>
      ) : (
        <p class="text-center text-muted-foreground mb-10">No posts yet. Stay tuned!</p>
      )
    }

    <div class="text-center">
      <a
        href="/blog"
        class="inline-flex items-center gap-1 text-sm font-medium hover:text-primary/80 transition-colors"
      >
        View all posts
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="m9 18 6-6-6-6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
