---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: "website" | "article";
}

const {
  title,
  description = "Viktor Avelino - Software Engineer specializing in React, TypeScript, and modern web technologies.",
  ogImage,
  ogType = "website",
} = Astro.props;

const defaultOgImage = "/images/og-default.png";
const ogImageUrl = new URL(ogImage ?? defaultOgImage, Astro.site ?? Astro.url.origin).href;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site ?? Astro.url.origin).href;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Viktor Avelino" />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <script is:inline>
      const theme = localStorage.getItem("theme");
      if (
        theme === "dark" ||
        (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      }
    </script>
    {import.meta.env.PROD && (
      <script async is:inline data-astro-rerun src="https://analytics.viktoravelino.com/script.js" data-website-id="e09c61e7-69d7-4601-80fe-a14bf0490de1"></script>
    )}
  </head>
  <body class="font-[Inter,sans-serif] bg-background text-foreground antialiased">
    <slot />
  </body>
</html>
