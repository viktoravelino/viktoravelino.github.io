---
import "@fontsource-variable/inter";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: "website" | "article";
  publishedDate?: Date;
}

const {
  title,
  description = "Viktor Avelino - Software Engineer specializing in React, TypeScript, and modern web technologies.",
  ogImage,
  ogType = "website",
  publishedDate,
} = Astro.props;

const defaultOgImage = "/images/og-default.png";
const ogImageUrl = new URL(ogImage ?? defaultOgImage, Astro.site ?? Astro.url.origin).href;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site ?? Astro.url.origin).href;

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Viktor Avelino",
  url: "https://viktoravelino.com",
};
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.ico" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Viktor Avelino" />
    <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#252525" media="(prefers-color-scheme: dark)" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Viktor Avelino" />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />
    {ogType === "article" && <meta property="article:author" content="Viktor Avelino" />}
    {ogType === "article" && publishedDate && <meta property="article:published_time" content={publishedDate.toISOString()} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <link rel="alternate" type="application/rss+xml" title="Viktor Avelino's Blog" href="/rss.xml" />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <slot name="head" />
    <title>{title}</title>
    <script is:inline>
      const theme = localStorage.getItem("theme");
      if (
        theme === "dark" ||
        (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      }
    </script>
    {import.meta.env.PROD && (
      <script async is:inline data-astro-rerun src="https://analytics.viktoravelino.com/script.js" data-website-id="e09c61e7-69d7-4601-80fe-a14bf0490de1"></script>
    )}
  </head>
  <body class="font-['Inter_Variable',sans-serif] bg-background text-foreground antialiased">
    <slot />
  </body>
</html>
